<div id="info" class="block book1"><!--info partial -->
  <nav id="info-nav" ></nav>
  <section class="fullwidth fullheiht">
    <div class="container">
      <p id="notice"><%= notice %></p>

      <div class="col s6">
        <h1 id="logo-styling">b<span class="red-text">oo</span>kings</h1>
      </div>

      <div id="booking-index" class="row">
        <div class="col s10 offset-s1">
          <table class="collection with-header">
            <thead>
              <tr class="collection-header">
                <th>Trainclass Date</th>
                <th>Trainclass Time</th>
                <th>Class Type</th>
                <th></th>
              </tr>
            </thead>
            <% if @bookings == nil %>
              <p>You have no bookings </p>
            <% else %>
              <tbody>
                <% @bookings.each do |booking| %>
                  <tr id="booking-<%= booking.id %>" class="collection-item"  >

                    <% tcs  = booking.trainclass_id %>
                    <% tc   = Trainclass.find_by(id: tcs) %>

                    <td><%= tc.date.strftime("%m/%d/%Y") %></td>
                    <td><%= tc.datetime.strftime("%H:%M") %></td>
                    <td><%= tc.train_class_type %></td>
                  
                    <td><b><%= link_to 'Burn!!', booking_destroy_path(booking), method: :delete, data: { confirm: 'Are you sure?'},id: "burn", class: "btn-floating btn-large waves-effect waves-light red" %></b></td>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>