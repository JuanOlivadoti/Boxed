<div id="info" class="block"><!--info partial -->
  <nav class="pushpin-nav pin-top" data-target="blue" style="top: 0px;">
    <div class="nav-wrapper blue">
      <div class="container">
        <a href="#" class="brand-logo">Information</a>
      </div>
    </div>
  </nav>
  <section class="fullwidth fullheiht">
	  <div class="container">

	    <p id="notice"><%= notice %></p>

	    <div class="row">
				<div class="col s5 offset-s1">
					<ul class="collection">
				    <li class="collection-item avatar">
				      <i class="material-icons circle red">person</i>
				      <h5><%=current_user.name%></h5>
				      <p>Name</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle blue">email</i>
				      <h5><%=current_user.email%></h5>
				      <p>Email</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle green">today</i>
				      <h5><%=current_user.bday%></h5>
				      <p>Birthday</p>
				    </li>
				  </ul>
				</div>
				<div class="col s5">
					<ul class="collection">
				    <li class="collection-item avatar">
				      <i class="material-icons circle purple">assignment_ind</i>
				      <h5>Number <%=current_user.id%></h5>
				      <p>Afiliation</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle orange">recent_actors</i>
				      <h5><%=current_user.dni%></h5>
				      <p>DNI</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle pink">today</i>
				      <h5><%=current_user.medcert%></h5>
				      <p>Medical certificate validity</p>
				    </li>
				  </ul>
				</div>
			</div>
			<div class="row">
				<div class="col s8 offset-s2">
					<div class="collection">
						<div class="collection-item avatar">
							<i href="#book" class="material-icons circle red">book</i>
							<% if current_user.bookings.last == nil %>
								<h5>You have no bookings</h5>
								<% else %>
								<ul>
									<li><%= @lastbook.date %></li>
									<li><%= @lastbook.datetime.to_s(:time) %></li>
									<li><%= @lastbook.train_class_type %></li>
								</ul>	
								<%end%>
							<p>Last booking</p>
						</div>
					</div>
				</div>
			</div>

	  </div>
	</section>
	</div>
</section>