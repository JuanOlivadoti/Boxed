<div id="info" class="block"><!--info partial -->
  <nav id="info-nav" ></nav>
  <section class="fullwidth fullheiht">
	  <div class="container">

	    <p id="notice"><%= notice %></p>

			<div class="col s6">
        <h1 id="logo-styling">Inf<span class="red-text">or</span>mation</h1>
      </div>
    </div>
    <div>
	    <div class="row">
				<div class="col s5 offset-s1">
					<ul class="collection">
				    <li class="collection-item avatar">
				      <i class="material-icons circle red">person</i>
				      <h5><%=current_user.name%><%= link_to "+", edit_user_registration_path, class: "btn-floating btn-large waves-effect waves-light red right"  %></h5>
								
				      <p>Name</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="large material-icons circle red">email</i>
				      <h5><%=current_user.email%></h5>
				      <p>Email</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle red">today</i>
				      <h5><%=current_user.bday%></h5>
				      <p>Birthday</p>
				    </li>
				  </ul>
				</div>
				<div class="col s5">
					<ul class="collection">
				    <li class="collection-item avatar">
				      <i class="material-icons circle red">assignment_ind</i>
				      <h5>Number <%=current_user.id%></h5>
				      <p>Afiliation</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle red">recent_actors</i>
				      <h5><%=current_user.dni%></h5>
				      <p>DNI</p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle red">today</i>
				      <h5><%=current_user.medcert%></h5>
				      <p>Medical certificate validity</p>
				    </li>
				  </ul>
				</div>
			</div>
			<div class="row">
				<div class="col s8 offset-s2">
					<div class="collection">
						<div class="collection-item avatar">
							<i href="#book" class="material-icons circle red">book</i>
							<% if current_user.bookings.last == nil %>
								<h5>You have no bookings</h5>
								<% else %>
								<ul>
									<li>Date: <b><%= @lastbook.date %></b></li>
									<li>Time: <b><%= @lastbook.datetime.to_s(:time) %></b></li>
									<li>Class type: <b><%= @lastbook.train_class_type %></b></li>
								</ul>	
								<%end%>
							<p>Last booking</p>
						</div>
					</div>
				</div>
			</div>
			
	  </div>
	</section>
	</div>
</section>