<!DOCTYPE html>
<html>
  <head>
    <title>Boxed</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
  </head>

  <body>
  	<header class="row" role="navigation">
	  	<nav class="nav">
		    <div class="container">
		    	<div id="row logo">
		    		<a href="/" id="logo">B<img id="logo-img" src="/images/B2.png" alt="">XED</a>
		    	</div>
		        <% if user_signed_in? -%>
		          <ul id="nav-mobile" class="right hide-on-med-and-down">
		            <li class="top"><a class="dropdown-button italic" href="#!" data-activates="dropdown1"><%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a></li>
		            <li class="top"><%= link_to 'Classes', trainclasses_path, class: "italic" %></li>
		            <li class="top"><%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: "italic"  %></li>
		          </ul>
			          <ul id="dropdown1" class="dropdown-content">
			          <li><a href="/users/<%=current_user.id%>/athlete_info/information" class="red-text text-darken-3 italic">Information</a></li>
			          <li><a href="/users/<%=current_user.id%>/athlete_info/bookings" class="red-text text-darken-3 italic">Bookings</a></li>
							  <li class="divider"></li>
			          <li><a href="/users/<%=current_user.id%>/athlete_info/my_fit" class="red-text text-darken-3 italic">My Fit tracker</a></li>
							</ul>
		        <% else -%>
		          <ul class="right hide-on-med-and-down">
		          	<li class="blue-text text-darken-4">Log in or sign up to enter our app</li>
		            <li><%= link_to 'Sign up', new_user_registration_path %></li>
		            <li><%= link_to 'Sign in', new_user_session_path %></li>
		          </ul>
		        <% end -%>
		    </div>
		  </nav>
	  </header>

    <%= yield %>
    
  </body>
</html>
