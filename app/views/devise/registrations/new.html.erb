<section class="fullwidth trainclass dev-view">
  <div class="row container">
    <h2 id="logo-styling">S<span class="red-text ">i</span>gn up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="row">
        <div class="col s10 offset-s1">
          <div class="row white" style="height:100px">
            <div class="input-field col s6 grey-text text-darken-4">
              <i class="material-icons prefix red-text">label</i>
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, placeholder: "your spartan name!!" %>
            </div>
            <div class="input-field col s6 grey-text text-darken-4">
              <i class="material-icons prefix red-text">label</i>
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, placeholder: "your@email.com" %>
            </div>
          </div>
        </div>

        <div class="col s10 offset-s1">
          <div class="row white" style="height:100px">
            <div class="input-field col s6 grey-text text-darken-4">
              <i class="material-icons prefix red-text">label</i>
              <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "6 characters minimum - 'Aroo!!' is already taken!" %>
            </div>
            <div class="input-field col s6 grey-text text-darken-4">
              <i class="material-icons prefix red-text">label</i>
              <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "repeat your password" %>
            </div>
          </div>
        </div>
      </div>
        
      <div class="col s10 offset-s1">
        <div class="row white" style="height:100px">
          <div class="input-field col s4 grey-text text-darken-4">
            <i class="material-icons prefix red-text">label</i>
            <label for="dni">Identification (NIF, NIE, ...)</label>
            <%= f.text_field :dni, autofocus: true, placeholder: "your Identification" %>
          </div>
          <div class="input-field col s4 grey-text text-darken-4">
            <i class="material-icons prefix red-text">label</i>
            <%= f.label :birthday %>
            <%= f.date_field :bday, autofocus: true, class: "datepicker", placeholder: "your birthday to party!!" %>
          </div>
          <div class="input-field col s4 grey-text text-darken-4">
            <i class="material-icons prefix red-text">label</i>
            <%= f.label :medical_certificate %>
            <%= f.date_field :medcert, autofocus: true, class: "datepicker", placeholder: "just checking your health" %>
          </div>
        </div>
      </div>
      <div class="col s10 offset-s1">
        <div class="row">
          <div class="col s4">
            <%= f.submit "Sign up", class: "waves-effect red btn btn-center" %>
          </div>
        </div>
        <% end %>
        <div class="row">
          <div class="col s4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
        
  


  </div>
</section>
