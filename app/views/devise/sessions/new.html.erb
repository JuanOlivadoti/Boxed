<section class="fullwidth trainclass dev-view">
  <div class="row container">
    <h2 id="logo-styling">L<span class="red-text ">O</span>G IN</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col s8 offset-s1">
          <div class="row white">
            <div class="input-field col s12 grey-text text-darken-4">
              <i class="material-icons prefix red-text">label</i>
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
        </div>
        <div class="col s8 offset-s1">
          <div class="row white">
            <div class="input-field col s8 grey-text text-darken-4">
              <i class="material-icons prefix red-text">label</i>
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
            <div class="input-field col s3 grey-text text-darken-4">
              <div class="actions waves-effect red btn">
                <%= f.submit "Log in" %> <br>
              </div>
            </div>
            <div class="input-field grey-text text-darken-4">
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            </div>
          </div>
          <%= render "devise/shared/links" %> 
        </div>
      </div>
    </div>

    <% end %>

  

  </div>
</section>