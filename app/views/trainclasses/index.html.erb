<section class="fullwidth trainclass">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Trainclasses</h1>
    
    <% unless current_user.user_type == [0..1] %>
      <button class="actions waves-effect waves-light btn"><%= link_to 'New Trainclass', new_trainclass_path, class: "clear-link" %></button>
      <% else %>
      <h3>Hi <span data-user-id="<%= current_user.id%>"><%=current_user.name%></span> choose your spot!</h3>
    <% end %>
   
    <div class="row">
      <% @m[1].each do |trainclass| %>
        <div class="col s3">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="images/03.jpg">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= trainclass.train_class_type %><i class="material-icons right">more_vert</i></span>
              <p><button id="js-tc-show" class="waves-effect teal darken-4 btn" data-t-id="<%= trainclass.id%>">  <%= link_to 'Show', trainclass, {"data-t-id": trainclass.id, "data-u-id": current_user.id, class: "clear-link"} %></button></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><b><%= trainclass.date %> - <%= trainclass.datetime.to_s(:time) %></b><i class="material-icons right">close</i></span>

              <ul>
                <li class="grey-text text-darken-4"><b>Class: <%= trainclass.train_class_type %></b></li>
                <li class="grey-text text-darken-4">Quota: <%= trainclass.quota %></li>
                <li class="grey-text text-darken-4">Max quota: <%= trainclass.capacity %></li>
                <li class="grey-text text-darken-4">Coach: <%= trainclass.coach_id %></li>
                <li class="grey-text text-darken-4">Quota: <%= trainclass.quota %></li><br>
                <%= link_to 'Book', booking_create_path(current_user.id, trainclass.id), {method: :post, id: trainclass.id, class: "waves-effect teal darken-4 btn", "data-t-id": trainclass.id, "data-u-id": current_user.id } %>
              </ul>
              <div class="row">
                <div class="col s6">
                  <button id="js-tc-edit" class="waves-effect teal darken-4 btn"> <%= link_to 'Edit', edit_trainclass_path(trainclass), {"data-t-id": trainclass.id, "data-u-id": current_user.id,class: "clear-link"} %></button>
                </div>
                <div class="col s6">
                  <button id="js-tc-show" class="waves-effect teal darken-4 btn" data-t-id="<%= trainclass.id%>">  <%= link_to 'Show', trainclass, {"data-t-id": trainclass.id, "data-u-id": current_user.id, class: "clear-link"} %></button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</section>