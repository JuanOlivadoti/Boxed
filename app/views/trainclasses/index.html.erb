<section class="fullwidth trainclass">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Trainclasses</h1>

    <h3>Select date</h3> <br>

    </div>

    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Max quota</th>
          <th>Train class type</th>
          <th>Coach</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @trainclasses.each do |trainclass| %>
          <tr>
            <td><%= trainclass.date %></td>
            <td><%= trainclass.time %></td>
            <td><%= trainclass.capacity %></td>
            <td><%= trainclass.train_class_type %></td>
            <td><%= trainclass.coach_id %></td>
            <td><button id="js-show">  <%= link_to 'Show', trainclass %></button></td>
            <td><button id="js-edit"> <%= link_to 'Edit', edit_trainclass_path(trainclass) %></button></td>
            <td><button id="js-destroy"> <%= link_to 'Destroy', trainclass, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
            <td><button id="js-book" formmethod="post"> <%= link_to 'Book', "/trainclasses/#{trainclass.id}/bookings" %></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Trainclass', new_trainclass_path %>
  </div>
</section>